<?php

namespace app\core;

class Response
{
    function __construct()
    {
    }

    public function setStatusCode(int $status):void
    {
        http_response_code($status);
    }
    function redirect($url):void
    {
        header('Location: ' . $url);
        //exit;
    }
    public function jsonResponse(array $json):void
    {
        echo json_encode($json);
    }
}
